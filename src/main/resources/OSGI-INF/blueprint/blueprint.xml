<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xsi:schemaLocation="
             http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0 http://aries.apache.org/schemas/blueprint-cm/blueprint-cm-1.1.0.xsd
             http://www.osgi.org/xmlns/blueprint/v1.0.0 https://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">
    
    <service id="serviceController" ref="myBean" interface="br.uefs.larsid.dlt.iot.soft.services.Controller"/>
    
    <bean id="entitiesController" class="br.uefs.larsid.dlt.iot.soft.model.ControllerImpl"
        init-method="start" destroy-method="stop">
        <property name="debugModeValue" value="${debugModeValue}" />
        <property name="MQTTClientHost" ref="serviceMQTTHost" />
        <property name="MQTTClientUp" ref="serviceMQTTUp" />
        <property name="childs" value="${childs}" />
    </bean>

    <service id="serviceMQTTHost" ref="MQTTClientHost" 
        interface="br.uefs.larsid.dlt.iot.soft.services.MQTTClientService"/>

    <service id="serviceMQTTUp" ref="MQTTClientUp" 
        interface="br.uefs.larsid.dlt.iot.soft.services.MQTTClientService"/>

    <bean id="MQTTClientHost" class="br.uefs.larsid.dlt.iot.soft.mqtt.MQTTClient"
        init-method="start" destroy-method="stop">
        <property name="ip" value="${ip}" ></property>
		<property name="port" value="${port}" ></property>
		<property name="userName" value="${user}" ></property>
		<property name="password" value="${pass}" ></property>
    </bean>

    <bean id="MQTTClientUp" class="br.uefs.larsid.dlt.iot.soft.mqtt.MQTTClient"
        init-method="start" destroy-method="stop">
        <property name="ip" value="${ip_up}" ></property>
		<property name="port" value="${port_up}" ></property>
		<property name="userName" value="${user_up}" ></property>
		<property name="password" value="${pass_up}" ></property>
    </bean>

    <cm:property-placeholder
		persistent-id="br.ufba.dcc.wiser.soft_iot.fog_broker"
		update-strategy="reload">
		<cm:default-properties>
			<cm:property name="ip" value="localhost" />
			<cm:property name="port" value="1884" />
			<cm:property name="user" value="karaf" />
			<cm:property name="pass" value="karaf" />
			<cm:property name="ip_up" value="localhost" />
			<cm:property name="port_up" value="1885" />
			<cm:property name="user_up" value="karaf" />
			<cm:property name="pass_up" value="karaf" />
			<cm:property name="debugModeValue" value="true" ></cm:property>
			<cm:property name="childs" value="1"></cm:property>
		</cm:default-properties>
	</cm:property-placeholder>


</blueprint>